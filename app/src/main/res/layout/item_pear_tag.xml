<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <co.lujun.androidtagview.TagContainerLayout
        android:id="@+id/tagContainerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        app:container_background_color="#0000"
        app:container_border_color="#0000"
        app:container_enable_drag="false"
        app:horizontal_interval="8dp"
        app:tag_background_color="@color/pear_tag_text_bg_color"
        app:tag_border_color="@color/pear_video_detail_bg_color"
        app:tag_clickable="true"
        app:tag_corner_radius="2dp"
        app:tag_horizontal_padding="10dp"
        app:tag_text_color="@color/colorTitleColor"
        app:tag_text_size="14sp"
        app:tag_theme="none"
        app:tag_vertical_padding="8dp"
        app:vertical_interval="8dp" />

</LinearLayout>