<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingLeft="@dimen/y9"
    android:paddingRight="@dimen/y9">

    <include layout="@layout/item_sister_top" />

    <include layout="@layout/item_sister_content" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.maverick.weight.RatioImageView
            android:layout_marginTop="@dimen/y5"
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_gravity="bottom|center_horizontal"
            android:text="查看大图"
            android:id="@+id/image_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/sister_content_color"
            android:textSize="@dimen/y11" />
    </FrameLayout>
    <include layout="@layout/item_sister_bottom" />
</LinearLayout>