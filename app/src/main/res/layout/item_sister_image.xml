<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/y9"
        android:paddingRight="@dimen/y9">

        <include layout="@layout/item_sister_top" />

        <include layout="@layout/item_sister_content" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.maverick.weight.RatioImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y5"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/loading"
                android:layout_width="@dimen/y25"
                android:layout_height="@dimen/y25"
                android:layout_gravity="center"
                android:src="@mipmap/loading"
                android:visibility="gone" />

            <TextView
                android:id="@+id/image_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y25"
                android:layout_gravity="bottom"
                android:background="@color/colorStatusBarBackground"
                android:gravity="center"
                android:text="点击查看全图"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/y11"
                android:visibility="gone" />
        </FrameLayout>

        <include layout="@layout/item_sister_bottom" />
    </LinearLayout>
</android.support.v7.widget.CardView>