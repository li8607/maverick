<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/y5">

        <FrameLayout
            android:id="@+id/img"
            android:layout_width="@dimen/y60"
            android:layout_height="@dimen/y45"
            android:layout_marginRight="@dimen/y10"
            android:background="@color/colorBackground"
            android:scaleType="centerCrop">

            <ImageView
                android:id="@+id/list_item_btn"
                android:layout_width="@dimen/y14"
                android:layout_height="@dimen/y14"
                android:layout_gravity="center"
                android:src="@drawable/video_click_play_selector" />
        </FrameLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img"
            android:layout_toRightOf="@+id/img"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/result_text_color"
            android:textSize="@dimen/x11" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img"
            android:layout_alignParentRight="true"
            android:textColor="@color/joke_time_color"
            android:textSize="@dimen/x8" />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right|top"
            android:clickable="false"
            android:visibility="gone" />
    </RelativeLayout>
</android.support.v7.widget.CardView>