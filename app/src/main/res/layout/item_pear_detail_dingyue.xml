<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/dingyue_btn"
        android:layout_width="60dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/pear_video_dingyue_shape"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="订阅"
        android:textColor="@color/colorTitleColor"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/dingyue_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_header" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toLeftOf="@+id/dingyue_btn"
        android:layout_toRightOf="@+id/dingyue_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dingyue_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/colorTitleColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dingyue_huati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/colorSubTitleColor"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>