<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar_default" />

        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_root_day_night"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/card_spacing"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="24dp">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/iv_day_night"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            app:srcCompat="@drawable/ic_brightness_3_black_24dp"
                            app:tint="@color/selector_radiobutton_text_color_main" />

                        <TextView
                            android:id="@+id/tv_title_day_night"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_weight="1"
                            android:text="@string/title_day_night" />

                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/sc_day_night"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:longClickable="false"
                            android:textOff="开"
                            android:textOn="关"
                            app:showText="true" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_root_night_auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/card_spacing"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="24dp">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            app:srcCompat="@drawable/ic_brightness_4_black_24dp"
                            app:tint="@color/selector_radiobutton_text_color_main" />

                        <TextView
                            android:id="@+id/tv_title_night_auto"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:text="@string/title_night_auto" />

                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/sc_night_auto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:longClickable="false"
                            android:textOff="开"
                            android:textOn="关"
                            app:showText="true" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_root_night_follow_system"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/card_spacing"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="24dp">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            app:srcCompat="@drawable/ic_brightness_4_black_24dp"
                            app:tint="@color/selector_radiobutton_text_color_main" />

                        <TextView
                            android:id="@+id/tv_title_night_follow_system"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:text="@string/title_night_follow_system" />

                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/sc_night_follow_system"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:enabled="false"
                            android:longClickable="false"
                            android:textOff="开"
                            android:textOn="关"
                            app:showText="true" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_more_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/card_spacing"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="24dp">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            app:srcCompat="@drawable/ic_color_lens_black_24dp"
                            app:tint="@color/selector_radiobutton_text_color_main" />

                        <TextView
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="@string/title_theme" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
