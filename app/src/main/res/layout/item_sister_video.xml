<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingLeft="@dimen/y9"
    android:paddingRight="@dimen/y9">

    <include layout="@layout/item_sister_top" />

    <include layout="@layout/item_sister_content" />

    <FrameLayout
        android:id="@+id/video_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y5">

        <com.maverick.weight.MyImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

    </FrameLayout>

    <include layout="@layout/item_sister_bottom" />
</LinearLayout>