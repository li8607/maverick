<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="?attr/colorPrimaryDark"
        android:paddingBottom="2dp"
        android:visibility="gone"
        app:tabIndicatorColor="?attr/colorTabLayoutIndicator"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="?attr/colorTabLayoutIndicator"
        app:tabTextColor="@color/textColorTabLayout"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"></android.support.v4.view.ViewPager>

</LinearLayout>