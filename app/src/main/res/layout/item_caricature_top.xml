<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/image_menu"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/sister_content_color"
        android:textSize="@dimen/y11" />


    <ImageView
        android:id="@+id/image_menu"
        android:layout_width="@dimen/y12"
        android:layout_height="@dimen/y12"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x8"
        android:scaleType="fitXY"
        android:src="@drawable/operation_share_day_selector" />
</RelativeLayout>
