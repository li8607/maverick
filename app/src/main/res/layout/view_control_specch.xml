<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:weightSum="3">

        <FrameLayout
            android:id="@+id/fl_play_control_speech"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingBottom="12dp"
            android:paddingTop="12dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_play_control_speech"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginRight="6dp"
                app:srcCompat="@drawable/ic_play_arrow_black_24dp"
                app:tint="@color/operation_count_day_selector" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_stop_control_speech"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingBottom="12dp"
            android:paddingTop="12dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_stop_control_speech"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginRight="6dp"
                app:srcCompat="@drawable/ic_stop_black_24dp"
                app:tint="@color/operation_count_day_selector" />

        </FrameLayout>

        <FrameLayout
            android:visibility="invisible"
            android:id="@+id/fl_next_control_speech"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingBottom="12dp"
            android:paddingTop="12dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_next_control_speech"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginRight="6dp"
                app:srcCompat="@drawable/ic_fast_forward_black_24dp"
                app:tint="@color/operation_count_day_selector" />

        </FrameLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_progress_control_speech"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:max="100"
        android:minHeight="0dp"
        android:visibility="gone" />

</merge>