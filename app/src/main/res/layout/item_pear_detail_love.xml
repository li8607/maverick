<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_love_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/love_root"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/love"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:scaleType="fitXY"
            android:src="@drawable/operation_ding_day_selector" />

        <TextView
            android:id="@+id/love_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="3dp"
            android:textColor="@color/operation_count_day_selector"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/collect_root"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/collect"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:scaleType="fitXY"
            android:src="@drawable/collect_selector" />

        <TextView
            android:id="@+id/collect_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="3dp"
            android:text="收藏"
            android:textColor="@color/operation_count_day_selector"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/down_root"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/down"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:scaleType="fitXY"
            android:src="@drawable/btn_download_selector" />

        <TextView
            android:id="@+id/down_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="3dp"
            android:text="缓存"
            android:textColor="@color/operation_count_day_selector"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_root"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="详情"
            android:textColor="@color/colorSubTitleColor"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/detail"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="3dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/btn_detail_arrow_down" />
    </LinearLayout>
</LinearLayout>