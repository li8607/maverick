<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_love_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/love_root"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/love"
            android:layout_width="@dimen/y11"
            android:layout_height="@dimen/y11"
            android:scaleType="fitXY"
            android:src="@drawable/collect_selector" />

        <TextView
            android:id="@+id/love_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/y3"
            android:text="2535"
            android:textColor="@color/share_item_title_color"
            android:textSize="@dimen/x8" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/collect_root"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/collect"
            android:layout_width="@dimen/y11"
            android:layout_height="@dimen/y11"
            android:scaleType="fitXY"
            android:src="@drawable/collect_selector" />

        <TextView
            android:id="@+id/collect_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/y3"
            android:text="收藏"
            android:textColor="@color/share_item_title_color"
            android:textSize="@dimen/x8" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/down_root"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/down"
            android:layout_width="@dimen/y11"
            android:layout_height="@dimen/y11"
            android:scaleType="fitXY"
            android:src="@drawable/collect_selector" />

        <TextView
            android:id="@+id/down_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/y3"
            android:text="缓存"
            android:textColor="@color/share_item_title_color"
            android:textSize="@dimen/x8" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_root"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="详情"
            android:textColor="@color/share_item_title_color"
            android:textSize="@dimen/x8" />

        <ImageView
            android:id="@+id/detail"
            android:layout_width="@dimen/y11"
            android:layout_height="@dimen/y11"
            android:layout_marginLeft="@dimen/y3"
            android:scaleType="fitXY"
            android:src="@drawable/collect_selector" />
    </LinearLayout>
</LinearLayout>